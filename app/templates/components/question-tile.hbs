<div style="border:1px #ccc solid;margin-left:-20px;margin-right:20px;box-shadow:1px 1px 1px 0px #ccc;margin-top:10px;padding:20px">
  <h4>{{question.title}}</h4>
  <p>By {{question.author}}</p>
  <hr>
  <p>{{question.contents}}</p>
  <p>{{question.notes}}</p>
  <hr>
  <button {{action 'delete' question}}>Delete</button>{{update-question question=question update="update"}}
</div>
